      "outDir": "../../wwwroot/app/dist/",
      "allowSyntheticDefaultImports": true,
      "noImplicitAny": true,
      "module": "esnext",
      "target": "es6",
      "lib": ["es6", "dom", "dom.iterable"],
      "jsx": "react",
